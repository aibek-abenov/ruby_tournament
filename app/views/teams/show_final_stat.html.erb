<div class="container">
  <h1>Final statistics</h1>
  <div class="d-flex flex-row-reverse bd-highlight">
    <div class="p-2 bd-highlight">
    <%= link_to 'Back to home page', root_path, class: 'btn btn-info text-white' %>
    <%= link_to 'Back to tournament results', show_all_statistics_path, class: 'btn btn-info text-white' %>
    </div>
  </div>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Team</th>
        <th>Win</th>
        <th>Loss</th>
        <th>Is Winner?</th>
      </tr>
    </thead>

    <tbody>
      <% @final_stat.each do |team| %>
        <tr>
          <td><%= team.team %></td>
          <td><%= team.win %></td>
          <td><%= team.loss %></td>
          <td><%= team.is_winner %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
